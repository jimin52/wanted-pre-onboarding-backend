// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Company {
  id          Int      @id @default(autoincrement())
  name        String
  country      String
  region      String
  Recruitments Recruitment[]
}



model Recruitment {
  id          Int      @id @default(autoincrement())
  company     Company  @relation(fields: [companyId], references: [id])
  companyId   Int
  position    String  //  채용포지션
  compensation Int    // 채용보상금. 숫자
  techstacks  RecruitmentTechstack[]
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  applications Application[]
}

model Techstack {
  id          Int      @id @default(autoincrement())
  name        String  @unique
  Recruitments RecruitmentTechstack[]
}

model RecruitmentTechstack {
  recruitmentId Int
  techstackId   Int
  recruitment   Recruitment @relation(fields: [recruitmentId], references: [id])
  techstack     Techstack   @relation(fields: [techstackId], references: [id])

  @@id ([recruitmentId, techstackId])
}
model User {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  email       String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  applications Application[]
}

model Application {
  userId        Int
  recruitmentId Int
  user        User     @relation(fields: [userId], references: [id])
  recruitment Recruitment @relation(fields: [recruitmentId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@id ([userId, recruitmentId])
}
